<!--Signup Page-->
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>Sign Up Page</title>
	<link rel="stylesheet" type="text/css" href="/assets/stylesheets/signup.css" />
</head>

<body>
	<header id="header">
		<% include partials/header.ejs %>
	</header>

	<nav>
		<% include partials/navig.ejs %>
	</nav>

	<main>
		<%	<!--Displaying error messages after validation in Signup Form-->
		if(error){
			error.forEach(function(item){%>
		<div class="isa_error"><%=item.msg %></div>
		<%});
		} %>
		<!--Signup Form-->
		<form class="mySignUpForm" method="POST" action="/myConnections/usersignup">
			<label><b>Username</b></label><br>
			<input type="text" placeholder="Enter the Username" name="userID" required><br>

			<label><b>First Name</b></label><br>
			<input type="text" placeholder="Enter First Name" name="firstname" required><br>

			<label><b>Last Name</b></label><br>
			<input type="text" placeholder="Enter Last Name" name="lastname" required><br>

			<label><b>Email</b></label><br>
			<input type="text" placeholder="Enter Email" name="email" required><br>

			<label><b>City</b></label><br>
			<input type="text" placeholder="Enter City" name="city" required><br>

			<label><b>State</b></label><br>
			<input type="text" placeholder="Enter State" name="state" required><br>

			<label><b>Country</b></label><br>
			<input type="text" placeholder="Enter Country" name="country" required><br>

			<label><b>Password</b></label><br>
			<input type="password" placeholder="Enter Password" name="password" required><br>

			<label><b>Confirm Password</b></label><br>
			<input type="password" placeholder="Confirm Password" name="confpassword" required><br>
			<button type="submit" class="signupbtn" value="Sign Up">Sign Up</button>
		</form>
	</main>
</body>
<footer>
	<% include partials/footer.ejs %>
</footer>

</html>